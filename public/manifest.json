{
  "name": "Lightlytics Assistant",
  "description": "Lightlytics Assistant",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.aws.amazon.com/*"
      ],
      "js": [
        "./static/js/tooltips.js"
      ],
      "css": [
        "./static/css/tooltips.css"
      ],
      "match_about_blank": true,
      "match_origin_as_fallback": true,
      "all_frames": true
    },
    {
      "matches": [
        "https://*.aws.amazon.com/*"
      ],
      "js": [
        "./static/js/content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png",
    "512": "logo512.png"
  }
}